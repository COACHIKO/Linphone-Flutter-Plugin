<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/call_background_gradient"
    android:padding="0dp">

    <!-- Caller Info Section -->
    <LinearLayout
        android:id="@+id/caller_info_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <!-- Avatar with animated ring -->
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp">

            <!-- Outer ring for visual effect -->
            <View
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/avatar_circle_background"
                android:alpha="0.3"/>

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/avatar_circle_background"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/caller_initial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="?"
                    android:textColor="#FFFFFF"
                    android:textSize="52sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />
            </FrameLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/caller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Unknown Caller"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/caller_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="+1234567890"
            android:textColor="#E8E8E8"
            android:textSize="17sp"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/call_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Connected"
            android:textColor="#C0C0C0"
            android:textSize="15sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/call_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="00:00"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Call Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <!-- DTMF Keypad (Hidden by default) -->
        <GridLayout
            android:id="@+id/dtmf_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:columnCount="3"
            android:rowCount="4"
            android:visibility="gone"
            android:elevation="2dp"
            android:useDefaultMargins="false"
            android:alignmentMode="alignBounds" />

        <!-- Main Control Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="24dp">

            <!-- Mute Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/mute_button"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="@drawable/call_control_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="4dp">

                    <ImageView
                        android:id="@+id/mute_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_mic_on"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <TextView
                    android:id="@+id/mute_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Mute"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Speaker Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/speaker_button"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="@drawable/call_control_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="4dp">

                    <ImageView
                        android:id="@+id/speaker_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_speaker"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <TextView
                    android:id="@+id/speaker_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Speaker"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Hold Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/hold_button"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="@drawable/call_control_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="4dp">

                    <ImageView
                        android:id="@+id/hold_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_pause"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <TextView
                    android:id="@+id/hold_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Hold"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Secondary Control Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="28dp">

            <!-- Keypad Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/dtmf_button"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/call_control_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_call"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Keypad"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Transfer Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/transfer_button"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/call_control_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_share"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Transfer"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Hangup Button -->
        <FrameLayout
            android:id="@+id/hangup_button"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_decline_background"
            android:clickable="true"
            android:focusable="true"
            android:elevation="6dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_call_end"
                android:tint="#FFFFFF" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
