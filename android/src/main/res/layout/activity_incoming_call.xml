<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0E1A">

    <!-- Ambient Background Effect -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/call_background_gradient"
        android:alpha="0.3" />

    <!-- Main Content Container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top Status Bar -->
        <LinearLayout
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <TextView
                android:id="@+id/call_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incoming call"
                android:textColor="#8A9BAE"
                android:textSize="14sp"
                android:letterSpacing="0.05"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Caller Avatar with Pulse Effect -->
        <FrameLayout
            android:id="@+id/avatar_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp">

            <!-- Outer Pulse Ring -->
            <View
                android:id="@+id/pulse_ring_outer"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/avatar_circle_background"
                android:alpha="0.2" />

            <!-- Inner Pulse Ring -->
            <View
                android:id="@+id/pulse_ring_inner"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:background="@drawable/avatar_circle_background"
                android:alpha="0.4" />

            <!-- Main Avatar -->
            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="@drawable/avatar_circle_background"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/caller_initial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="?"
                    android:textColor="#FFFFFF"
                    android:textSize="56sp"
                    android:fontFamily="sans-serif-light" />
            </FrameLayout>

        </FrameLayout>

        <!-- Caller Information -->
        <LinearLayout
            android:id="@+id/caller_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatar_container"
            android:layout_marginTop="48dp"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <TextView
                android:id="@+id/caller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown Caller"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/caller_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="+1234567890"
                android:textColor="#8A9BAE"
                android:textSize="18sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Swipe Gesture Container -->
        <FrameLayout
            android:id="@+id/swipe_container"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp">

            <!-- Background Track with Glass Effect -->
            <FrameLayout
                android:id="@+id/swipe_track"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:background="@drawable/swipe_track_glass"
                android:elevation="2dp" />

            <!-- Left Decline Hint -->
            <LinearLayout
                android:id="@+id/decline_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:alpha="0.7">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_call_end"
                    android:tint="#FF6B6B" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Decline"
                    android:textColor="#FF6B6B"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.02" />

            </LinearLayout>

            <!-- Right Accept Hint -->
            <LinearLayout
                android:id="@+id/accept_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:alpha="0.7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Answer"
                    android:textColor="#4CAF50"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.02" />

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_call_answer"
                    android:tint="#4CAF50" />

            </LinearLayout>

            <!-- Swipeable Button -->
            <FrameLayout
                android:id="@+id/swipe_button"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_gravity="center"
                android:background="@drawable/swipe_button_enhanced"
                android:elevation="8dp">

                <ImageView
                    android:id="@+id/swipe_icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_call_answer"
                    android:tint="#FFFFFF" />

            </FrameLayout>

        </FrameLayout>

        <!-- Swipe Instruction Text -->
        <TextView
            android:id="@+id/swipe_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:text="Swipe left to decline â€¢ Swipe right to answer"
            android:textColor="#6A7B8E"
            android:textSize="13sp"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.03"
            android:alpha="0.85" />

    </RelativeLayout>

</FrameLayout>
