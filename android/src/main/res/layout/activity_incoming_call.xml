<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/call_background_gradient">

    <!-- Caller Avatar Circle -->
    <LinearLayout
        android:id="@+id/caller_avatar_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/avatar_circle_background">

            <TextView
                android:id="@+id/caller_initial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="?"
                android:textColor="#FFFFFF"
                android:textSize="64sp"
                android:textStyle="bold" />
        </FrameLayout>

    </LinearLayout>

    <!-- Caller Info -->
    <LinearLayout
        android:id="@+id/caller_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/caller_avatar_container"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/caller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unknown Caller"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/caller_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="+1234567890"
            android:textColor="#E0E0E0"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/call_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Incoming call..."
            android:textColor="#B0B0B0"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Action Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <!-- Decline Button -->
        <LinearLayout
            android:id="@+id/decline_button_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/decline_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/button_decline_background"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_call_end"
                    android:tint="#FFFFFF" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Decline"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Accept Button -->
        <LinearLayout
            android:id="@+id/accept_button_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/accept_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/button_accept_background"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_call_answer"
                    android:tint="#FFFFFF" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Accept"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
