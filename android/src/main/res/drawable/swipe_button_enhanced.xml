<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40FFFFFF">
    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <item>
        <layer-list>
            <!-- Outer glow -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#3000E676" />
                    <size android:width="88dp" android:height="88dp" />
                </shape>
            </item>
            
            <!-- Main button gradient -->
            <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
                <shape android:shape="oval">
                    <gradient
                        android:angle="135"
                        android:startColor="#66BB6A"
                        android:centerColor="#4CAF50"
                        android:endColor="#43A047"
                        android:type="linear" />
                    <size android:width="84dp" android:height="84dp" />
                </shape>
            </item>
            
            <!-- Inner highlight -->
            <item android:top="6dp" android:bottom="6dp" android:left="6dp" android:right="6dp">
                <shape android:shape="oval">
                    <gradient
                        android:angle="90"
                        android:startColor="#30FFFFFF"
                        android:centerColor="#15FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:type="linear" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
